{
  "name": "svelte-app",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "build": "rollup -c && copyfiles --up 1 extension/**/*.* public",
    "build:firefox": "npm run build && renamer --force --find firefox-manifest.json --replace manifest.json public/*",
    "build:chrome": "npm run build",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "format": "prettier --write --plugin-search-dir=. ./**/*.{svelte,js,html}"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@types/webextension-polyfill": "^0.9.0",
    "copyfiles": "^2.4.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "renamer": "^4.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^2.0.0",
    "svelte": "^3.0.0",
    "webextension-polyfill": "^0.9.0"
  },
  "dependencies": {
    "he": "^1.2.0"
  }
}
