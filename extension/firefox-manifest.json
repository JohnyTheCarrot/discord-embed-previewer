{
  "name": "Discord Embeds",
  "version": "1.0.1",
  "description": "Preview sites' Discord embeds for debugging purposes. Not affiliated in any way with Discord.",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*", "file:///*.html"],
      "js": ["browser-polyfill.js", "meta-reader.js"]
    }
  ],
  "manifest_version": 2
}
